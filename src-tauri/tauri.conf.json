{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Namashka Launcher",
  "version": "2.0.0",
  "identifier": "com.namashka-launcher.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "namashka-launcher",
        "width": 960,
        "height": 540,
        "minWidth": 400,
        "minHeight": 300,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/icon.png"
    ]
  }
}